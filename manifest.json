{
  "manifest_version": 2,

  "name": "Core notifier",
  "description": "This extensions checks for notifications in core smartwork.",
  "version": "1.1",
  "icons": { "16": "icon2.png",
  "48": "icon2.png",
  "128": "icon2.png"
  },

  "permissions": [
    "https://core.catalysts.cc/",
    "notifications"
  ],
  "browser_action": {
    "default_icon": "icon2.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["jquery-1.11.0.min.js", "defs.js", "background.js"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}